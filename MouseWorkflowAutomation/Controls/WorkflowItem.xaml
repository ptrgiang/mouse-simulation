<UserControl x:Class="MouseWorkflowAutomation.Controls.WorkflowItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MouseWorkflowAutomation.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Background="LightBlue">
            <TextBlock x:Name="ItemNameTextBlock" Text="{Binding ItemName}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>