<UserControl x:Class="MouseWorkflowAutomation.Properties.DragAndDropProperties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MouseWorkflowAutomation.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <Grid>
        <StackPanel>
            <TextBlock Text="Drag &amp; Drop Properties" FontWeight="Bold" Margin="5"/>
            <TextBlock Text="Start X:" Margin="5,0,5,0"/>
            <TextBox x:Name="StartX" Margin="5" Text="{Binding Action.StartX, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Start Y:" Margin="5,0,5,0"/>
            <TextBox x:Name="StartY" Margin="5" Text="{Binding Action.StartY, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="End X:" Margin="5,0,5,0"/>
            <TextBox x:Name="EndX" Margin="5" Text="{Binding Action.EndX, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="End Y:" Margin="5,0,5,0"/>
            <TextBox x:Name="EndY" Margin="5" Text="{Binding Action.EndY, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
    </Grid>
</UserControl>
