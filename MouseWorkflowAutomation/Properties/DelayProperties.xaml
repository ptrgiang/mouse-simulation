<UserControl x:Class="MouseWorkflowAutomation.Properties.DelayProperties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MouseWorkflowAutomation.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <Grid>
        <StackPanel>
            <TextBlock Text="Delay Properties" FontWeight="Bold" Margin="5"/>
            <TextBlock Text="Milliseconds:" Margin="5,0,5,0"/>
            <TextBox x:Name="Milliseconds" Margin="5" Text="{Binding Action.Milliseconds, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
    </Grid>
</UserControl>
